<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">

    <!-- Level Indicator -->
    <View
        android:id="@+id/level_indicator"
        android:layout_width="4dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:background="@color/divider_color" />

    <!-- Level Icon -->
    <ImageView
        android:id="@+id/iv_level_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_level_locked"
        android:contentDescription="Level status" />

    <!-- Level Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nivo 0"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novajlija"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Requirements and Rewards -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/tv_xp_required"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200 XP potrebno"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_pp_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+40 PP"
            android:textColor="@color/pp_color"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:drawableStart="@drawable/ic_pp_small"
            android:drawablePadding="4dp"
            android:gravity="center_vertical" />

    </LinearLayout>

</LinearLayout>