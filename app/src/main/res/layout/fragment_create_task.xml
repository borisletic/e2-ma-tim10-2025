<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Basic Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:tint="@color/primary_color"
                        android:src="@drawable/ic_task"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Ikonica osnovnih informacija" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Osnovne informacije"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Task Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_task_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:hint="Naziv zadatka"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_task_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLength="100" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Task Description -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_task_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Opis (opciono)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_task_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:maxLines="3"
                        android:maxLength="500" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Category Selection -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kategorija"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/sp_category"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Difficulty & Importance Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_level"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Ikonica težine i bitnosti" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Težina i bitnost"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Difficulty Selection -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Težina zadatka"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/sp_difficulty"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp" />

                <!-- Importance Selection -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bitnost zadatka"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/sp_importance"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp" />

                <!-- XP Preview -->
                <TextView
                    android:id="@+id/tv_xp_preview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ukupno XP: 2"
                    android:textSize="14sp"
                    android:textColor="@color/xp_color"
                    android:textStyle="bold"
                    android:background="@color/primary_light"
                    android:padding="12dp"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Task Type Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_sync"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/primary_color"
                        android:contentDescription="Ikonica tipa zadatka" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tip zadatka"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <RadioGroup
                    android:id="@+id/rg_task_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_single_task"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Jednokratan"
                        android:textColor="@color/text_primary"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/rb_repeating_task"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ponavljajući"
                        android:textColor="@color/text_primary" />

                </RadioGroup>

                <!-- Single Task Date/Time Selection -->
                <LinearLayout
                    android:id="@+id/ll_single_task_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_select_date_time"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Izaberite datum i vreme"
                        android:textColor="@color/primary_color"
                        app:strokeColor="@color/primary_color" />

                    <TextView
                        android:id="@+id/tv_selected_date_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nijedan datum nije izabran"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Repeating Task Options -->
                <LinearLayout
                    android:id="@+id/ll_repeating_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Opcije ponavljanja"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Repeat Interval -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ponovi svakih: "
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="8dp" />

                        <Spinner
                            android:id="@+id/sp_repeat_interval"
                            android:layout_width="80dp"
                            android:layout_height="48dp"
                            android:minHeight="48dp"
                            android:layout_marginEnd="8dp" />

                        <Spinner
                            android:id="@+id/sp_repeat_unit"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:minHeight="48dp"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <!-- Start Date -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Datum početka"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_select_start_date"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Izaberite datum početka"
                        android:textColor="@color/primary_color"
                        app:strokeColor="@color/primary_color" />

                    <TextView
                        android:id="@+id/tv_selected_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nijedan datum nije izabran"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="16dp"
                        android:gravity="center" />

                    <!-- End Date -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Datum završetka"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_select_end_date"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Izaberite datum završetka"
                        android:textColor="@color/primary_color"
                        app:strokeColor="@color/primary_color" />

                    <TextView
                        android:id="@+id/tv_selected_end_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nijedan datum nije izabran"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Example for repeating task -->
                <TextView
                    android:id="@+id/tv_repeat_example"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Primer: Zadatak će se ponavljati 1.8., 7.8., 13.8., 19.8...."
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="italic"
                    android:background="@color/background_primary"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_cancel"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Otkaži"
                    android:textColor="@color/text_secondary"
                    app:strokeColor="@color/text_secondary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_create_task"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Kreiraj"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/primary_color"
                    app:strokeColor="@color/primary_color" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>