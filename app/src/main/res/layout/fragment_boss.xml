<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Naslov -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Borba sa Bosom"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center" />

        <!-- BOSS SECTION -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/surface_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Boss Title -->
                <TextView
                    android:id="@+id/tv_boss_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POČETNI ČUVAR"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/error_color"
                    android:layout_marginBottom="4dp"
                    android:layout_gravity="center" />

                <!-- Boss Level -->
                <TextView
                    android:id="@+id/tv_boss_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nivo 1 Boss"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="12dp"
                    android:layout_gravity="center" />

                <!-- Boss Visual Area -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/boss_arena_bg">

                    <ImageView
                        android:id="@+id/iv_boss_sprite"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_boss_idle"
                        android:contentDescription="Boss sprite" />

                </RelativeLayout>

                <!-- Boss HP -->
                <TextView
                    android:id="@+id/tv_boss_hp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200 / 200 HP"
                    android:textSize="16sp"
                    android:textColor="@color/error_color"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center" />

                <!-- Boss HP Progress Bar -->
                <ProgressBar
                    android:id="@+id/pb_boss_hp"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progress="100"
                    android:max="100"
                    android:progressTint="@color/error_color"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tv_attack_success_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Šansa napada: 68%"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center" />

                <!-- Potential Rewards Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POTENCIJALNE NAGRADE"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_marginBottom="16dp">

                    <!-- Coins Reward -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="💰 Novčići:"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/tv_coins_reward"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200"
                            android:textSize="16sp"
                            android:textColor="@color/success_color"
                            android:textStyle="bold"
                            android:layout_marginLeft="8dp" />

                    </LinearLayout>

                    <!-- Equipment Chance -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⚔️ Oprema:"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/tv_equipment_chance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20% šanse"
                            android:textSize="16sp"
                            android:textColor="@color/primary_color"
                            android:textStyle="bold"
                            android:layout_marginLeft="8dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Battle Stats -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tv_attacks_remaining"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Napadi: 5 od 5"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <!-- Attack Button - MOVED HERE -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_attack"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="NAPADNI!"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/error_color"
                    app:cornerRadius="8dp"
                    android:layout_marginBottom="12dp" />

                <!-- Battle Message -->
                <TextView
                    android:id="@+id/tv_battle_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Spreman za borbu!"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textAlignment="center"
                    android:minHeight="30dp"
                    android:gravity="center"
                    android:padding="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- PLAYER SECTION -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/surface_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Player Title -->
                <TextView
                    android:id="@+id/tv_player_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TVOJA SNAGA"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <!-- Base PP -->
                <TextView
                    android:id="@+id/tv_base_pp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Osnovna PP: Učitava se..."
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp" />

                <!-- Equipment Bonus -->
                <TextView
                    android:id="@+id/tv_equipment_bonus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ 0 PP (oprema)"
                    android:textSize="16sp"
                    android:textColor="@color/success_color"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_secondary"
                    android:layout_marginVertical="8dp" />

                <!-- Total PP -->
                <TextView
                    android:id="@+id/tv_player_pp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UKUPNO: 0 PP"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:layout_marginBottom="8dp" />

                <!-- Player PP Progress Bar -->
                <ProgressBar
                    android:id="@+id/pb_player_pp"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progress="0"
                    android:max="100"
                    android:progressTint="@color/primary_color" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- EQUIPMENT SECTION -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/surface_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Equipment Title -->
                <TextView
                    android:id="@+id/tv_equipment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AKTIVNA OPREMA"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <!-- Equipment List -->
                <LinearLayout
                    android:id="@+id/ll_active_equipment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- No Equipment message -->
                    <TextView
                        android:id="@+id/tv_no_equipment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nema aktivne opreme"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="italic" />

                </LinearLayout>

                <!-- Prepare for Battle Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_prepare_battle"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:text="Pripremi opremu"
                    android:textColor="@color/primary_color"
                    app:strokeColor="@color/primary_color"
                    app:cornerRadius="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>