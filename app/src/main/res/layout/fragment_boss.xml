<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Naslov -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Borba sa Bosom - PP Sistem"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center" />

        <!-- Kartica sa PP informacijama -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/surface_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pregled Snage (PP)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <!-- Osnovna PP -->
                <TextView
                    android:id="@+id/tv_base_pp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Osnovna PP: Učitava se..."
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp" />

                <!-- Bonus iz opreme -->
                <TextView
                    android:id="@+id/tv_equipment_bonus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bonus iz opreme: Učitava se..."
                    android:textSize="14sp"
                    android:textColor="@color/success_color"
                    android:layout_marginBottom="8dp"
                    android:visibility="visible" />

                <!-- Linija -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_secondary"
                    android:layout_marginVertical="8dp" />

                <!-- Ukupna PP -->
                <TextView
                    android:id="@+id/tv_total_pp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ukupna PP: Učitava se..."
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:layout_marginBottom="8dp" />

                <!-- PP Progress Bar -->
                <ProgressBar
                    android:id="@+id/pb_total_pp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progress="0"
                    android:max="100"
                    android:progressTint="@color/primary_color" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Kartica sa Boss informacijama -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/surface_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Boss Informacije"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <!-- Boss Level -->
                <TextView
                    android:id="@+id/tv_boss_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Boss Nivo: Učitava se..."
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp" />

                <!-- Boss HP -->
                <TextView
                    android:id="@+id/tv_boss_hp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Boss HP: Učitava se..."
                    android:textSize="16sp"
                    android:textColor="@color/error_color"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Boss HP Progress Bar -->
                <ProgressBar
                    android:id="@+id/pb_boss_hp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progress="100"
                    android:max="100"
                    android:progressTint="@color/error_color" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Dugme za osvežavanje -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_refresh"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="8dp"
            android:text="Osveži PP Podatke"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primary_color"
            app:cornerRadius="8dp" />

        <!-- Dugme za pripremu borbe -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_prepare_battle"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:text="Pripremi se za borbu"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/success_color"
            app:cornerRadius="8dp" />

        <!-- Battle UI kartica -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/surface_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arena Borbe"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- Boss vizuelna predstava -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/boss_arena_bg">

                    <ImageView
                        android:id="@+id/iv_boss_sprite"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_boss_idle"
                        android:contentDescription="Boss sprite" />

                    <!-- Boss HP bar sa label -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_boss_hp_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Boss HP: 200/200"
                            android:textSize="12sp"
                            android:textColor="@color/error_color"
                            android:textStyle="bold" />

                        <ProgressBar
                            android:id="@+id/pb_boss_hp_battle"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progress="100"
                            android:max="100"
                            android:progressTint="@color/error_color" />

                    </LinearLayout>

                    <!-- Player PP bar sa label -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="8dp"
                        android:layout_marginHorizontal="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_player_pp_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tvoja PP: 25"
                            android:textSize="12sp"
                            android:textColor="@color/primary_color"
                            android:textStyle="bold" />

                        <ProgressBar
                            android:id="@+id/pb_player_pp_battle"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progress="25"
                            android:max="100"
                            android:progressTint="@color/primary_color" />

                    </LinearLayout>

                </RelativeLayout>

                <!-- Active Equipment prikaz -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aktivna oprema: "
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                    <LinearLayout
                        android:id="@+id/ll_active_equipment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <!-- Equipment ikone će se dodavati programski -->
                        <TextView
                            android:id="@+id/tv_no_equipment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nema aktivne opreme"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:textStyle="italic" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Battle info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tv_attacks_remaining"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Napadi: 5 od 5"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tv_success_chance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Šansa: 67%"
                        android:textSize="14sp"
                        android:textColor="@color/success_color"
                        android:textAlignment="textEnd" />

                </LinearLayout>

                <!-- Attack button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_attack"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="NAPADNI!"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/error_color"
                    app:cornerRadius="8dp" />

                <!-- Battle message -->
                <TextView
                    android:id="@+id/tv_battle_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textAlignment="center"
                    android:minHeight="20dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>