<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:minWidth="400dp"
    android:maxWidth="450dp"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="32dp">

    <!-- Level Up Icon -->
    <ImageView
        android:id="@+id/iv_level_up_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_level_up"
        android:contentDescription="Level Up Icon" />

    <!-- Content Layout -->
    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Congratulations Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎉 Čestitamo! 🎉"
            android:textColor="@color/primary_color"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Napredovali ste na viši nivo!"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <!-- Level Progress -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tv_old_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nivo 0"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:background="@drawable/level_badge_old"
                android:padding="8dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:layout_marginHorizontal="12dp"
                android:contentDescription="Arrow" />

            <TextView
                android:id="@+id/tv_new_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nivo 1"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/level_badge_new"
                android:padding="8dp" />

        </LinearLayout>

        <!-- New Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nova titula:"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_new_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Početnik"
            android:textColor="@color/primary_color"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- PP Rewards -->
        <LinearLayout
            android:id="@+id/layout_pp_rewards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/reward_background"
            android:padding="12dp"
            android:layout_marginBottom="20dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nagrade:"
                android:textColor="@color/text_primary"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_pp_gained"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+40 PP"
                android:textColor="@color/pp_color"
                android:textSize="16sp"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_pp_small"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tv_total_pp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ukupno: 40 PP"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_share"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Podeli"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_continue"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Nastavi"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>