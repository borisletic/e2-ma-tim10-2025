<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Equipment Icon -->
        <ImageView
            android:id="@+id/iv_equipment_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_equipment"
            android:contentDescription="Equipment icon" />

        <!-- Equipment Info -->
        <TextView
            android:id="@+id/tv_equipment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Napitak Snage"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_equipment_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Napitak"
            android:textColor="@color/primary_color"
            android:textSize="11sp"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_equipment_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Povećava snagu za 20%"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:minLines="2" />

        <!-- Price -->
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100 novčića"
            android:textColor="@color/coins_color"
            android:textSize="13sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:drawableStart="@drawable/ic_coins"
            android:drawablePadding="4dp" />

        <!-- Purchase Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_purchase"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kupi"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>