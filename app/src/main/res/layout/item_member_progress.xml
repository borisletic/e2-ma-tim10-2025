<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Member Info Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_member_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Member Name"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_member_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Član"
                    android:textSize="12sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_no_failed_tasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check"
                android:layout_marginEnd="8dp"
                app:tint="@color/success_color" />

            <TextView
                android:id="@+id/tv_total_damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 HP"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#4CAF50" />

        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_member"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:max="120"
            android:progress="0"
            android:layout_marginBottom="8dp"
            android:progressTint="#4CAF50" />

        <!-- Detailed Progress -->
        <TextView
            android:id="@+id/tv_progress_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prodavnica: 0 | Napadi: 0 | Laki: 0 | Teški: 0 | Poruke: 0"
            android:textSize="11sp"
            android:textColor="#888888"
            android:maxLines="2"
            android:ellipsize="end" />

    </LinearLayout>

</androidx.cardview.widget.CardView>